<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.austinthompson.easysudoku.MainActivity"
    android:background="@color/colorPrimary"
    android:paddingTop="10sp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text_title"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:text="@string/app_name"
        android:textColor="@color/colorAccent"
        android:textSize="40sp"
        android:textStyle="bold"
        android:paddingBottom="15sp"
        android:paddingTop="15sp"
        android:paddingStart="15sp"
        android:paddingEnd="15sp" />

    <Button
        android:text="@string/openCameraText"
        android:layout_height="75sp"
        android:id="@+id/button_openCamera"
        style="@style/Widget.AppCompat.Button.Colored"
        android:background="@color/colorPrimaryLessDark"
        android:textColor="@color/colorAccent"
        android:layout_marginBottom="100dp"
        android:height="10sp"
        android:elevation="0dp"
        android:layout_width="200sp"
        android:textSize="20sp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:textIsSelectable="false" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text_appDesc"
        android:text="@string/app_desc"
        android:layout_marginTop="54dp"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="18sp"
        android:textAlignment="center"
        android:layout_below="@+id/text_title"
        android:layout_alignStart="@+id/text_title"
        android:layout_alignEnd="@+id/text_title" />

    <View
        android:layout_width="match_parent"
        android:background="@color/colorAccent"
        android:layout_height="4sp"
        android:layout_below="@+id/text_appDesc"
        android:layout_marginTop="69dp"
        android:layout_alignStart="@+id/text_appDesc"
        android:layout_alignEnd="@+id/text_appDesc" />

</RelativeLayout>
